<div class="sub-heading">
  <p class="heading-text">Employees</p>
</div>

<div class="users-list container">
    {{#user-search filter=(action 'searchByName') sort_by=sort_by
      as |searchResults| 
    }}
      <div class="row">
        {{#each searchResults as |user|}}
          <div class="user_column col-md-4 col-lg-3 col-xl-2">
            {{user-listing user=user}}
          </div>
        {{/each}}
      </div>
    {{/user-search}}
</div>
{{outlet}}