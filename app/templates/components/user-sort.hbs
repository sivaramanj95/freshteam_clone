<div class="user-sort-filter-cont">
  <span>Sort by:</span>
  <BsDropdown @tagName="span" as |dd|>
    <dd.toggle>
      <span class="caret"></span>
    </dd.toggle>
    <dd.menu as |menu|>
      <menu.item>
        <a href="#" onclick={{action "setSortBy" 'first_name' preventDefault=false}}>First name</a>
      </menu.item>
      <menu.divider/>
      <menu.item>
        <a href="#" onclick={{action "setSortBy" 'last_name' preventDefault=false}}>Last name</a>
      </menu.item>
      <menu.divider/>
      <menu.item>
        <a href="#" onclick={{action "setSortBy" 'joining_date' preventDefault=false}}>Joining Date</a>
      </menu.item>
      <menu.divider/>
      {{!-- <menu.item>
        <a href="#" onclick={{action "setSortOrder" 'asc' preventDefault=false}}>Ascending</a>
      </menu.item>
      <menu.divider/>
      <menu.item>
        <a href="#" onclick={{action "setSortOrder" 'desc' preventDefault=false}}>Descending</a>
      </menu.item> --}}
      <menu.divider/>
    </dd.menu>
  </BsDropdown>
</div>
{{yield sortedResults}}